{
  "name": "skorpil-frontend",
  "version": "1.0.0",
  "description": "Frontend for skorpil.cz",
  "main": "app.js",
  "private": true,
  "author": "Štěpán Škorpil",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:start": "yarn install && yarn dev",
    "dev": "next dev ./src --hostname 0.0.0.0",
    "build": "yarn install",
    "start": "next start ./src",
    "lint": "ts-standard \"{src,apps,libs,test}/**/*.ts\" --fix",
    "generate:graphql-types": "graphql-codegen-esm --config graphql-codegen.yml --"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@apollo/experimental-nextjs-app-support": "^0.4.2",
    "@datapunt/matomo-tracker-js": "^0.5.1",
    "@hookform/resolvers": "^2.9.10",
    "@js-joda/core": "^5.6.1",
    "@popperjs/core": "^2.11.6",
    "@svgr/webpack": "^8.1.0",
    "bootstrap": "^5.3.2",
    "convict": "~6.1.0",
    "graphql": "^16.8.1",
    "material-symbols": "^0.11.0",
    "negotiator": "^0.6.3",
    "next": "^14.0.0",
    "node-cache": "^5.1.2",
    "normalize.css": "^8.0.1",
    "npmlog": "^6.0.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.2.0",
    "react-smooth-collapse": "^2.1.2",
    "sass": "^1.67.0",
    "slate": "^0.94.1",
    "typescript-collections": "^1.3.3",
    "yargs-parser": "^20.2.7",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.15.0",
    "@graphql-codegen/introspection": "^2.2.1",
    "@graphql-codegen/typed-document-node": "^2.3.8",
    "@graphql-codegen/typescript": "^2.8.3",
    "@graphql-codegen/typescript-operations": "^2.5.8",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@types/convict": "^6.1.1",
    "@types/jest": "^29.2.0",
    "@types/negotiator": "^0.6.1",
    "@types/node": "^18.7.18",
    "@types/npmlog": "^4.1.3",
    "@types/react": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^29.2.2",
    "ts-jest": "^29.0.3",
    "ts-standard": "^12.0.2",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "ignorePatterns": ["**/generated/*"],
    "overrides": [
      {
        "files": [
          "*.js",
          "*.jsx",
          "*.ts",
          "*.tsx"
        ],
        "extends": "standard-with-typescript"
      }
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "ts-standard": {
    "project": "./tsconfig.json"
  },
  "browserslist": [
    "defaults"
  ]
}
